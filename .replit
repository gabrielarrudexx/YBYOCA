entrypoint = "backend/main.py"

[packager]
language = "python3"
version = "3.10"

[unitTest]
language = "python3"

[deployment]
run = ["uvicorn backend.main:app --host 0.0.0.0 --port $PORT"]
healthcheckPath = "/"
healthcheckTimeout = 100
startTimeout = 30

[nix]
channel = "stable-23_11"

[env]
PORT = "8000"
SECRET_KEY = "YBYOCA_SECRET_KEY_REPLIT_PRODUCTION_SECURE"
DATABASE_URL = "sqlite:///./ybyoca.db"
UPLOAD_DIR = "uploads"

[interpreter]
command = ["uvicorn", "backend.main:app", "--host", "0.0.0.0", "--port", "8000"]
